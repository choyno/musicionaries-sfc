<% provide(:title, @clp_content.talk_title) %>

<div class="clp-content">
  <%= link_to clp_path(@clp), class: "chip blue white-text" do %>
    Back
  <% end %>
  <% if @clp.user_id == current_user.id %>
    <%= link_to edit_clp_clp_content_path(@clp, @clp_content), class: "chip" do %>
      Edit
    <% end %>
  <% end %>
  <div class="card z-depth-0">
    <div class="card-content">
      <span class="card-title"><strong><%= @clp_content.talk_title %></strong></span>
      <p class="grey-text">Talk</p>
    </div>
  </div>
</div>
    